{
  "name": "masterchef",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run front:dev\" \"npm run back:dev\"",
    "build": "npm run front:build && npm run back:build",
    "start": "concurrently \"npm run front:start\" \"npm run back:start\"",
    "lint": "npm run front:lint && npm run back:lint",

    "front:dev": "cd frontend && next dev",
    "front:build": "cd frontend && next build",
    "front:start": "cd frontend && next start",
    "front:lint": "cd frontend && eslint .",

    "back:dev": "cd backend && tsx watch src/index.ts",
    "back:build": "cd backend && tsc",
    "back:start": "cd backend && node dist/index.js",
    "back:lint": "cd backend && eslint src/**/*.ts"
  },
  "dependencies": {
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "concurrently": "^8.2.2"
  },
  "optionalDependencies": {},
  "workspaces": [
    "frontend",
    "backend"
  ]
}